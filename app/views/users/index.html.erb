<h1 class="title">ユーザー一覧</h1>

<div class="row">
  <div class="col-md-4 col-md-offset-5">
    <%= link_to "新規ユーザー作成", new_user_path, class:"btn btn-primary btn-lg col-md-6 col-md-offset-3"%>
  </div>
</div>


<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col" class="text-center">#</th>
      <th scope="col" class="text-center">ユーザー名</th>
      <th scope="col" class="text-center">所属グループ</th>
    </tr>
  </thead>
  <tbody>
    <% n = 1 %>
    <% @users.each do | user | %>
      <tr>
        <th scope="row" class="text-center"><%= n %></th>
        <td class="text-center"><%=user.name%></td>                
        <% if user.group %>
          <td class="text-center"><%=user.group.name%></td>
        <% else %>
          <td class="text-center">所属なし</td>
        <% end %>        
      </tr> 
      <% n += 1 %>
    <% end %>
  </tbody>
</table>
<div class="row">
  <div class="col-md-4 col-md-offset-5 btn-back">
    <%= link_to "登録情報画面", top_path, class:"btn btn-primary btn-lg col-md-6 col-md-offset-3"%>
  </div>
</div>
