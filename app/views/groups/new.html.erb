<% provide(:title, "グループの追加") %>
<h1 class="title">グループの追加</h1>

<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <%= form_with(model: @group, local: true) do |f| %>
      <%= render "shared/error_messages_html", object: f.object %>
      <%= f.label :name, "追加するグループ名（必須）" %>
      <%= f.text_field :name %>
      <%= f.hidden_field :session_id, :value => params[:session_id] %>
      <%= f.submit "グループを追加する", class: "btn btn-primary btn-lg" %>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-md-4 col-md-offset-4 btn-back">
    <%= link_to "登録情報画面", top_path, class:"btn btn-primary btn-lg col-md-6 col-md-offset-3"%>
    <%= link_to "グループ一覧", groups_path, class:"btn btn-primary btn-lg col-md-6 col-md-offset-3"%>
  </div>
</div>

