<h1 class="title">登録情報</h1>

<div class="wrapper">
  <%= link_to "グループの編集", new_group_path, class:"btn btn-primary btn-lg"%>
  <%= link_to "メンバーの編集", new_user_path, class:"btn btn-primary btn-lg"%>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">ユーザー名</th>
      <th scope="col">グループ名</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each_with_index do | user, index | %>
      <tr>
        <th scope="row"><%=index+1%></th>
        <td><%=user.name%></td>        
        <% if user.group %>
          <td><%=user.group.name%></td>
        <% else %>
          <td></td>
        <% end %>        
      </tr>
    <% end %>
  </tbody>
</table>
